pipeline {
    agent any
    stages {
        stage("Variables") {
            steps {
                sh "printenv"
            }
        }
        stage("Version Check") {
            steps {
                sh "node --version"
                sh "npm --version"
                sh "git --version"
            }
        }
        stage("Lint commit") {
            steps {
                sh "npx @lexedwards/release-cli lint"
            }
        }
        stage("npm install") {
            steps {
                sh "npm ci"
            }
        }
        stage('Publish') {
            when {
                not {
                    tag 'v*'
                }
            }
            environment {
                NPM_TOKEN=credentials('NPM_TOKEN')
                GITHUB_TOKEN=credentials('GITHUB_TOKEN')
            }
            steps {
                sh "npx @lexedwards/release-cli@latest release --github --npm"
            }
        }
    }
}